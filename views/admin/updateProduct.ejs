                              <form method="post" action="/admin/updateProduct"  enctype="multipart/form-data">
                                  <div class="row mb-4">
                                      <label class="col-lg-3 col-form-label">Product name*</label>
                                      <div class="col-lg-9">
                                          <input type="text" class="form-control" placeholder="Type here" name="name" id="name" value="<%= productData[0].name %>" onkeyup="nameValidation()">
                                          <input type="hidden" class="form-control" name="id" value="<%= productData[0]._id %>"onkeyup="nameValidation()">
